# Server Configuration
PORT=3000
NODE_ENV=development

# API Security
# Master key has full access to all apps and can manage API keys
MASTER_KEY=your-master-key-change-me-in-production

# Database Configuration
# SQLite (default)
DATABASE_URL=sqlite://./data/metrics.db

# PostgreSQL
# DATABASE_URL=postgres://user:password@localhost:5432/metrics

# MySQL
# DATABASE_URL=mysql://user:password@localhost:3306/metrics

# Data Retention
RETENTION_DAYS=30
